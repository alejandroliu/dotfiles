#!/bin/sh
#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'
PS1='[\u@\h \W]\$ '

alias moer=more
alias mroe=more

if [ -d $HOME/git/sandbox/mptcl ] ; then
  alias mpt='wish $HOME/git/sandbox/mptcl/d_mplayer.tcl'
  alias edl='wish $HOME/git/sandbox/mptcl/d_edl.tcl'
fi

if [ -z $LTPATH ] ; then
  if [ -d $HOME/local/pkgs ] ; then
    export LTPATH=$HOME/local/pkgs
    export PATH=$PATH:$HOME/local/bin
    if [ -d $HOME/local/man ] ; then
      [ -z $MANPATH ] && MANPATH=$(manpath)
      export MANPATH=$MANPATH:$HOME/local/man
    fi
  fi
fi
